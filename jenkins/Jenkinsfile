pipeline {
    agent { any }
    stages {
        stage("Build the Image") {
            steps{
                sh 'docker build -t registry.dpdk.com/docker-jenkins:2.440.2-1 .'
            }
        }

        stage("Lis images") {
            steps {
                sh 'docker images'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
